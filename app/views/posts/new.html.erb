<h2>新規投稿</h2>

<% if @post.errors.any? %>
  <div class="flash flash--alert">
    <p>エラーがあります：</p>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @post, local: true do |f| %>
  <div class="field">
    <%= f.label :image_url, "画像URL" %>
    <%= f.text_field :image_url, placeholder: "https://example.com/sample.jpg" %>
  </div>

  <div class="field">
    <%= f.label :message, "メッセージ" %>
    <%= f.text_area :message, rows: 4 %>
  </div>

  <div class="field">
    <%= f.label :posted_on, "思い出の日付" %>
    <%= f.date_field :posted_on %>
  </div>

  <div class="actions">
    <%= f.submit "投稿する" %>
  </div>
<% end %>

<%= link_to "投稿一覧に戻る", posts_path %>

